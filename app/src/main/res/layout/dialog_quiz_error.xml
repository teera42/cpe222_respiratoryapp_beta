<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="@string/icon_app_title"
        android:src="@drawable/information" />

    <TextView
        android:id="@+id/title_dialog_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Please enter information"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/ok"
            android:background="@drawable/dialog_button_yes_shape"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginStart="2dp"
            android:textSize="18sp"
            android:text="Ok"/>

    </LinearLayout>

</LinearLayout>